<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    android:orientation="vertical"
    tools:context=".set.SetTimeActivity">

    <RelativeLayout
        android:id="@+id/rl_my_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/color_white"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            style="@style/textViewMainStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/hourr" />
        <!--<ToggleButton
            android:id="@+id/tbstyle"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignParentRight="true"
  android:layout_centerVertical="true"
  android:background="@android:color/transparent"
  android:button="@drawable/toggle_btn"
  android:checked="true"
  android:text=""
  android:textOff=""
  android:textOn=""
  />     -->
        <CheckBox
            android:id="@+id/switch_24_hour_cb"
            style="@style/checkBoxSettingStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_my_autoset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/color_white"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            style="@style/textViewMainStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"

            android:text="@string/zdsz" />
        <!--
                  <ToggleButton
                        android:id="@+id/tbzd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
		    android:background="@android:color/transparent"
		    android:button="@drawable/toggle_btn"
		    android:checked="false"
		    android:text=""
		    android:textOff=""
		    android:textOn=""
            />      -->
        <CheckBox
            android:id="@+id/auto_setting_cb"
            style="@style/checkBoxSettingStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLineSep" />

    <RelativeLayout
        android:id="@+id/rl_my_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/tv_my_setdate"
            style="@style/textViewMainStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"

            android:text="@string/szrq" />

        <TextView
            android:id="@+id/tv_my_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/iv_more"
            android:text="2016.06.06"
            android:textColor="@color/color_text_gray"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_person_more" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLineSep" />

    <RelativeLayout
        android:id="@+id/rl_my_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/tv_my_settime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/textViewMainStyle"
            android:text="@string/szsj"
             />

        <TextView
            android:id="@+id/tv_my_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/right_arrow"
            android:text="08:08"
            android:textColor="@color/color_text_gray"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_person_more" />
    </RelativeLayout>
</LinearLayout>
