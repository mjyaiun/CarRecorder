<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    android:orientation="vertical"
    tools:context=".aboutus.AboutActivity">

    <RelativeLayout
        android:id="@+id/rl_my_setbanben"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/color_white"
        android:padding="@dimen/activity_horizontal_margin">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textViewMainStyle"
            android:layout_centerVertical="true"
            android:text="@string/version" />

        <TextView
            android:id="@+id/version_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textViewSubStyle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="1.0.10.1" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_my_aboutus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/color_white"
        android:padding="@dimen/activity_horizontal_margin">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textViewMainStyle"
            android:layout_centerVertical="true"
            android:text="@string/aboutUs"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_person_more" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLineSep"/>

    <RelativeLayout
        android:id="@+id/rl_my_userback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="@dimen/activity_horizontal_margin">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textViewMainStyle"
            android:layout_centerVertical="true"
            android:text="@string/feedback"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_person_more" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLineSep"/>

    <RelativeLayout
        android:id="@+id/rl_my_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="@dimen/activity_horizontal_margin">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/textViewMainStyle"
            android:layout_centerVertical="true"
            android:text="@string/service"/>


        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_person_more" />
    </RelativeLayout>

</LinearLayout>
