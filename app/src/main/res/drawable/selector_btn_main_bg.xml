<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_enabled="false">
        <shape >
            <stroke android:color="@color/colorBtnDisable" android:width="1dp"/>
            <solid android:color="@color/colorBtnDisable"/>
            <corners android:topLeftRadius="5dp" android:bottomLeftRadius="5dp"
                android:topRightRadius="5dp" android:bottomRightRadius="5dp"/>
        </shape>
    </item>


    <item android:state_pressed="true">
        <shape >
            <stroke android:color="@color/colorMain" android:width="1dp"/>
            <solid android:color="@color/colorMain"/>
            <corners android:topLeftRadius="5dp" android:bottomLeftRadius="5dp"
                android:topRightRadius="5dp" android:bottomRightRadius="5dp"/>
        </shape>
    </item>

    <item>
        <shape >
            <stroke android:color="@color/colorMain" android:width="1dp"/>
            <solid android:color="@color/colorMain"/>
            <corners android:topLeftRadius="5dp" android:bottomLeftRadius="5dp"
                android:topRightRadius="5dp" android:bottomRightRadius="5dp"/>
        </shape>
    </item>
</selector>
